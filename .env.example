# Asgard Data Platform - DBT Transformations Configuration
# Copy this file to .env and update with your actual values

# DBT Project Configuration
DBT_PROJECT_DIR=/home/hac/downloads/code/asgard-dev/dbt
DBT_PROFILES_DIR=/home/hac/downloads/code/asgard-dev/dbt

# Trino Connection Settings (deployed in data-platform namespace)
TRINO_HOST=trino-coordinator.data-platform.svc.cluster.local
TRINO_PORT=8080
TRINO_USER=trino
TRINO_CATALOG=iceberg

# Data Lake Schema Configuration  
SILVER_SCHEMA=silver
GOLD_SCHEMA=gold

# S3 Configuration (from AWS secrets in data-platform namespace)
S3_BUCKET=asgard-data-lake
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Nessie Configuration (deployed in data-platform namespace)
NESSIE_URI=http://nessie.data-platform.svc.cluster.local:19120/api/v1
NESSIE_REF=main
NESSIE_AUTH_TYPE=NONE

# Application Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
LOG_LEVEL=info

# Optional: Database for transformation metadata (default: in-memory)
# DATABASE_URL=postgresql://user:password@localhost:5432/asgard

# Optional: Redis for caching (if implementing caching)
# REDIS_URL=redis://localhost:6379/0